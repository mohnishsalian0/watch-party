{
  "manifest_version": 3,
  "name": "Watch Party",
  "description": "Watch shows with your friends & family from anywhere across the world",
  "version": "1.0",
  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon-16.png",
      "32": "images/icon-32.png",
      "48": "images/icon-48.png",
      "128": "images/icon-128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["js/emote-cannon.js", "js/video-player.js"]
    }
  ],
  "background": {
    "service_worker": "js/service-worker.js"
  },
  "permissions": ["activeTab", "storage"],
  "host_permissions": ["http://www.localhost:3000/*"],
  "web_accessible_resources": [
    {
      "resources": [ "styles.css", "pages/emote-tray.html" ],
      "matches": [ "<all_urls>" ]
    }
  ]
}
